NameVirtualHost remote-rest.dev.qalingo.com:80
NameVirtualHost remote-rest.dev.qalingo.com:443

<VirtualHost remote-rest.dev.qalingo.com:80>
    ServerName remote-rest.dev.qalingo.com
    ServerAdmin contact@yourdomain.com

    ErrorLog "/home/tomcat/servers/apache/logs/qalingo-remote-rest-demo.error.log"
    CustomLog "/home/tomcat/servers/apache/logs/qalingo-remote-rest-demo.access.log" common
    ProxyRequests Off
    ProxyPreserveHost On

    RewriteEngine On
    RewriteRule ^/remote-rest/(.*) $1   [P]

    ProxyPassReverseCookiePath /remote-rest /

    ProxyPass        / http://localhost:22080/remote-rest/
    ProxyPassReverse / http://localhost:22080/remote-rest/

	<Directory proxy:http://localhost:22080/*>
			Order deny,allow
			Allow from all
	</Directory>

</VirtualHost>

<VirtualHost remote-rest.dev.qalingo.com:443>
    ServerName remote-rest.dev.qalingo.com
    ServerAdmin contact@yourdomain.com

    ErrorLog "/home/tomcat/servers/apache/logs/ssl-qalingo-remote-rest-demo-error.log"
    CustomLog "/home/tomcat/servers/apache/logs/ssl-qalingo-remote-rest-demo-access.log" common
    SSLProxyEngine on
    SSLEngine on

    SSLCertificateFile    /etc/ssl/certs/ssl-cert-snakeoil.pem
    SSLCertificateKeyFile /etc/ssl/private/ssl-cert-snakeoil.key

    RequestHeader set X-Forwarded-Proto "https"

    RewriteEngine On
    RewriteRule ^/remote-rest/(.*) $1   [P]

    ProxyRequests Off
    ProxyPreserveHost On
    ProxyPass        / http://localhost:22080/remote-rest/
    ProxyPassReverse / http://localhost:22080/remote-rest/

	<Directory proxy:http://localhost:22080/*>
			Order deny,allow
			Allow from all
	</Directory>
</VirtualHost>

